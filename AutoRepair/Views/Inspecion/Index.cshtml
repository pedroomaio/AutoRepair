@model AutoRepair.Models.InspecionViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Inspecion</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="form-group">
    <label asp-for="CarId" class="control-label"></label>
    <select asp-for="CarId" asp-items="Model.Cars" class="form-control"></select>
    <span asp-validation-for="CarId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ModelId" class="control-label"></label>
    <select asp-for="ModelId" asp-items="Model.Models" class="form-control"></select>
    <span asp-validation-for="ModelId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="BrandId" class="control-label"></label>
    <select asp-for="BrandId" asp-items="Model.Brands" class="form-control"></select>
    <span asp-validation-for="BrandId" class="text-danger"></span>
</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
	$(document).ready(function () {
		$("#ModelId").change(function () {
			$("#BrandId").empty();
			$.ajax({
				url: '@Url.Action("GetBrandsAsync","Inspecion")',
				type: 'POST',
				dataType: 'json',
                data: { countryId: $("#ModelId").val()},
				success: function (cities) {
					debugger;
                    $("#BrandId").append('<option value="0">(Select a brand...)</option>');
					$.each(cities, function (i, city) {
                        $("#BrandId").append('<option value="'
							+ city.id + '">'
							+ city.name + '</option>');
					});
				},
				error: function (ex) {
					debugger;
					alert('Failed to retrieve brands.' + ex);
				}
			});
			return false;
		})
	});
    </script>
}