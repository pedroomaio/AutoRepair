                        </li>
                    }
                    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Customer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bold" style=" font-size: 15pt; color:black" asp-area="" asp-controller="Cars" asp-action="Index">Your Cars</a>
                        </li>
                    }
                    @if (this.User.Identity.IsAuthenticated)
                    {

                        <li class="nav-item dropdown text-dark" style=" margin-top: -4%;">
                            <a class="nav-link text-dark font-weight-bold" style=" font-size: 15pt; color:black" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                                @if (Model != null)
                                {
                                    @foreach (var item in Model)
                                    {

                                        @if (!string.IsNullOrEmpty(item.ImageFullPath))
                                        {
                                            <img src="@Url.Content(item.ImageFullPath)" alt="Image" style="width:50px;height:50px;max-width:100%;height:auto;" />

                                        }


                                    }
                                }
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @*<li>
                                        <a class="nav-link">@this.User.Identity.Name</a>
                                    </li>*@
                                <li><a class="nav-link" asp-area="" asp-controller="Account" asp-action="ChangeUser">Edit Profile</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="Account" asp-action="ResetPassword">Reset Password</a></li>
                            </ul>
                        </li>

                        <li class="nav-item" style="margin-top: -10%; ">
                            <a class="nav-link text-dark font-weight-bold" style=" font-size: 15pt; color:black" asp-area="" asp-controller="Account" asp-action="Logout">
                                <lord-icon src="https://cdn.lordicon.com/lywgqtim.json"
                                           trigger="loop-on-hover"
                                           colors="primary:#000000,secondary:#000000"
                                           style="width:75px;height:75px">
                                </lord-icon>
                            </a>
                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bold" style=" font-size: 15pt; color:black" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bold" style=" font-size: 15pt; color: black" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </nav>

